<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/character_creation_start"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DnDCharacterOrganizer">

    <TextView
        android:id="@+id/alignment_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="@string/press_and_hold_for_descriptions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"/>


    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/level_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_below="@id/level_identifier"
        android:layout_alignStart="@id/level_identifier"
        android:layout_marginTop="10sp"
        android:minWidth="100sp"
        android:textSize="25sp"
        app:spinner_divider_color="@color/black"
        app:spinner_divider_show="true"
        app:spinner_divider_size="1sp"
        app:spinner_item_array="@array/level_array"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@color/dark_red"
        app:spinner_popup_height="300sp"
        app:spinner_popup_width="50sp" />

    <TextView
        android:id="@+id/level_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_input"
        android:layout_alignStart="@id/character_identifier"
        android:layout_marginTop="30sp"
        android:text="@string/character_level"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


    <TextView
        android:id="@+id/class_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/character_identifier"
        android:layout_marginStart="60sp"
        android:layout_marginTop="26sp"
        android:layout_toEndOf="@id/alignment_view"
        android:text="@string/character_class"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/class_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_below="@id/class_identifier"
        android:layout_alignStart="@id/class_identifier"
        android:layout_marginTop="10sp"
        android:longClickable="true"
        android:minWidth="100sp"
        android:tag="class_dropdown"
        android:textSize="25sp"
        app:spinner_divider_color="@color/black"
        app:spinner_divider_show="true"
        app:spinner_divider_size="1sp"
        app:spinner_item_array="@array/class_array"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@color/dark_red"
        app:spinner_popup_height="300sp"
        app:spinner_popup_width="150sp" />

    <TextView
        android:id="@+id/subclass_identifier"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@id/level_identifier"
        android:layout_alignStart="@id/class_identifier"
        android:layout_height="wrap_content"
        android:text="@string/character_subclass"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/subclass_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_below="@id/subclass_identifier"
        android:layout_alignStart="@id/subclass_identifier"
        android:layout_marginTop="10sp"
        android:longClickable="true"
        android:minWidth="100sp"
        android:tag="subclass_dropdown"
        android:textSize="25sp"
        app:spinner_divider_color="@color/black"
        app:spinner_divider_show="true"
        app:spinner_divider_size="1sp"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@color/dark_red"
        app:spinner_popup_width="150sp" />

    <TextView
        android:id="@+id/background_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/character_identifier"
        android:layout_below="@id/level_dropdown"
        android:layout_marginTop="30sp"
        android:text="@string/character_background"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/background_dropdown"
        android:tag="background_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_below="@id/background_identifier"
        android:layout_alignStart="@id/background_identifier"
        android:layout_marginTop="10sp"
        android:longClickable="true"
        android:minWidth="100sp"
        android:textSize="25sp"
        app:spinner_divider_color="@color/black"
        app:spinner_divider_show="true"
        app:spinner_divider_size="1sp"
        app:spinner_item_array="@array/background_array"
        app:spinner_popup_background="@color/dark_red"
        app:spinner_popup_height="300sp"
        app:spinner_popup_width="250sp"
        app:spinner_popup_animation="dropdown"/>

    <TextView
        android:id="@+id/races_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/class_identifier"
        android:layout_alignBottom="@id/background_identifier"
        android:text="@string/character_race"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/races_dropdown"
        android:tag="races_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_below="@id/races_identifier"
        android:layout_alignStart="@id/class_identifier"
        android:layout_marginTop="10sp"
        android:longClickable="true"
        android:minWidth="100sp"
        android:textSize="25sp"
        app:spinner_divider_color="@color/black"
        app:spinner_divider_show="true"
        app:spinner_divider_size="1sp"
        app:spinner_item_array="@array/races_array"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@color/dark_red"
        app:spinner_popup_height="300sp"
        app:spinner_popup_width="150sp" />

    <TextView
        android:id="@+id/character_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alignment_view"
        android:layout_marginStart="10sp"
        android:layout_marginTop="40sp"
        android:layout_marginEnd="60sp"
        android:layout_toStartOf="@id/alignment_view"
        android:text="@string/character_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/character_identifier"
        android:layout_alignStart="@id/character_identifier"
        android:layout_marginTop="10sp"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxWidth="200sp"
        android:minWidth="100sp" />

    <Button
        android:id="@+id/next_character_button"
        android:layout_width="wrap_content"
        android:minWidth="200sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20sp"
        android:onClick="character_stats_screen"
        android:padding="20sp"
        android:text="@string/next_character"
        android:textSize="20sp" />

</RelativeLayout>