<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/character_creation_stats"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DnDCharacterOrganizer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/center_view"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/strength_stat_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:layout_alignStart="@id/stat_1"
        android:text="@string/strength"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/stat_1"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_below="@id/strength_stat_identifier"
        android:layout_marginEnd="40sp"
        android:layout_toStartOf="@id/stat_2"
        android:layout_marginTop="10sp"
        android:minWidth="100sp"
        android:textSize="25sp"
        app:spinner_divider_color="@color/black"
        app:spinner_divider_show="true"
        app:spinner_divider_size="1sp"
        app:spinner_item_array="@array/stats_array"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@color/dark_red"
        app:spinner_popup_height="300sp"
        app:spinner_popup_width="50sp" />

    <TextView
        android:id="@+id/dexterity_stat_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/center_view"
        android:layout_alignBottom="@id/strength_stat_identifier"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="-20sp"
        android:text="@string/dexterity"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/stat_2"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_below="@id/dexterity_stat_identifier"
        android:layout_alignStart="@id/dexterity_stat_identifier"
        android:layout_marginTop="10sp"
        android:minWidth="100sp"
        android:textSize="25sp"
        app:spinner_divider_color="@color/black"
        app:spinner_divider_show="true"
        app:spinner_divider_size="1sp"
        app:spinner_item_array="@array/stats_array"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@color/dark_red"
        app:spinner_popup_height="300sp"
        app:spinner_popup_width="50sp" />

    <TextView
        android:id="@+id/constitution_stat_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/strength_stat_identifier"
        android:layout_marginTop="20sp"
        android:layout_alignStart="@id/stat_3"
        android:text="@string/constitution"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/stat_3"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_below="@id/constitution_stat_identifier"
        android:layout_marginTop="10sp"
        android:layout_toEndOf="@id/stat_2"
        android:layout_marginStart="40sp"
        android:minWidth="100sp"
        android:textSize="25sp"
        app:spinner_divider_color="@color/black"
        app:spinner_divider_show="true"
        app:spinner_divider_size="1sp"
        app:spinner_item_array="@array/stats_array"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@color/dark_red"
        app:spinner_popup_height="300sp"
        app:spinner_popup_width="50sp" />

    <TextView
        android:id="@+id/intelligence_stat_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stat_1"
        android:layout_marginTop="40sp"
        android:layout_marginEnd="100sp"
        android:layout_alignStart="@id/strength_stat_identifier"
        android:text="@string/intelligence"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/stat_4"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_below="@id/intelligence_stat_identifier"
        android:layout_alignStart="@id/strength_stat_identifier"
        android:layout_marginTop="10sp"
        android:minWidth="100sp"
        android:textSize="25sp"
        app:spinner_divider_color="@color/black"
        app:spinner_divider_show="true"
        app:spinner_divider_size="1sp"
        app:spinner_item_array="@array/stats_array"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@color/dark_red"
        app:spinner_popup_height="300sp"
        app:spinner_popup_width="50sp" />

    <TextView
        android:id="@+id/wisdom_stat_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stat_2"
        android:layout_marginTop="40sp"
        android:layout_marginEnd="100sp"
        android:layout_alignStart="@id/dexterity_stat_identifier"
        android:text="@string/wisdom"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/stat_5"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_below="@id/wisdom_stat_identifier"
        android:layout_alignStart="@id/wisdom_stat_identifier"
        android:layout_marginTop="10sp"
        android:minWidth="100sp"
        android:textSize="25sp"
        app:spinner_divider_color="@color/black"
        app:spinner_divider_show="true"
        app:spinner_divider_size="1sp"
        app:spinner_item_array="@array/stats_array"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@color/dark_red"
        app:spinner_popup_height="300sp"
        app:spinner_popup_width="50sp" />

    <TextView
        android:id="@+id/charisma_stat_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stat_3"
        android:layout_marginTop="40sp"
        android:layout_alignStart="@id/constitution_stat_identifier"
        android:text="@string/charisma"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/stat_6"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_below="@id/charisma_stat_identifier"
        android:layout_alignStart="@id/charisma_stat_identifier"
        android:layout_marginTop="10sp"
        android:minWidth="100sp"
        android:textSize="25sp"
        app:spinner_divider_color="@color/black"
        app:spinner_divider_show="true"
        app:spinner_divider_size="1sp"
        app:spinner_item_array="@array/stats_array"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@color/dark_red"
        app:spinner_popup_height="300sp"
        app:spinner_popup_width="50sp" />

    <Switch
        android:id="@+id/minimum_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimum 72"
        android:layout_alignStart="@id/stat_4"
        android:layout_below="@id/stat_4"
        android:layout_marginTop="50sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/middle_view"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/minimum_switch"
        android:layout_alignBottom="@id/minimum_switch"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/four_d_six"
            android:text="4d6"
            android:layout_marginStart="40sp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/three_d_six"
            android:layout_marginStart="50sp"
            android:text="3d6"/>


    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/roll_for_stats"
        android:minWidth="200sp"
        android:layout_below="@id/minimum_switch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:onClick="generate_Random_Stats"/>



</RelativeLayout>