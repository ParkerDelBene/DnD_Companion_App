<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/character_creation_stats"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DnDCharacterOrganizer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/center_view"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input stats by using the dropdowns"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/strength_stat_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_alignStart="@id/stat_1"
        android:text="@string/strength"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/stat_1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/strength_stat_identifier"
        android:layout_marginEnd="40dp"
        android:layout_toStartOf="@id/stat_2"
        android:layout_marginTop="10dp"
        android:minWidth="100dp"
        android:textSize="25sp"
        app:spinner_divider_color="@color/black"
        app:spinner_divider_show="true"
        app:spinner_divider_size="1dp"
        app:spinner_item_array="@array/stats_array"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@color/dark_red"
        app:spinner_popup_height="300dp"
        app:spinner_popup_width="50dp" />

    <TextView
        android:id="@+id/dexterity_stat_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/center_view"
        android:layout_alignBottom="@id/strength_stat_identifier"
        android:layout_marginEnd="-20dp"
        android:text="@string/dexterity"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/stat_2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/dexterity_stat_identifier"
        android:layout_alignStart="@id/dexterity_stat_identifier"
        android:layout_marginTop="10dp"
        android:minWidth="100dp"
        android:textSize="25sp"
        app:spinner_divider_color="@color/black"
        app:spinner_divider_show="true"
        app:spinner_divider_size="1dp"
        app:spinner_item_array="@array/stats_array"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@color/dark_red"
        app:spinner_popup_height="300dp"
        app:spinner_popup_width="50dp" />

    <TextView
        android:id="@+id/constitution_stat_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/strength_stat_identifier"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@id/stat_3"
        android:text="@string/constitution"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/stat_3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/constitution_stat_identifier"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/stat_2"
        android:layout_marginStart="40dp"
        android:minWidth="100dp"
        android:textSize="25sp"
        app:spinner_divider_color="@color/black"
        app:spinner_divider_show="true"
        app:spinner_divider_size="1dp"
        app:spinner_item_array="@array/stats_array"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@color/dark_red"
        app:spinner_popup_height="300dp"
        app:spinner_popup_width="50dp" />

    <TextView
        android:id="@+id/intelligence_stat_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stat_1"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:layout_alignStart="@id/strength_stat_identifier"
        android:text="@string/intelligence"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/stat_4"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/intelligence_stat_identifier"
        android:layout_alignStart="@id/strength_stat_identifier"
        android:layout_marginTop="10dp"
        android:minWidth="100dp"
        android:textSize="25sp"
        app:spinner_divider_color="@color/black"
        app:spinner_divider_show="true"
        app:spinner_divider_size="1dp"
        app:spinner_item_array="@array/stats_array"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@color/dark_red"
        app:spinner_popup_height="300dp"
        app:spinner_popup_width="50dp" />

    <TextView
        android:id="@+id/wisdom_stat_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stat_2"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:layout_alignStart="@id/dexterity_stat_identifier"
        android:text="@string/wisdom"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/stat_5"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/wisdom_stat_identifier"
        android:layout_alignStart="@id/wisdom_stat_identifier"
        android:layout_marginTop="10dp"
        android:minWidth="100dp"
        android:textSize="25sp"
        app:spinner_divider_color="@color/black"
        app:spinner_divider_show="true"
        app:spinner_divider_size="1dp"
        app:spinner_item_array="@array/stats_array"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@color/dark_red"
        app:spinner_popup_height="300dp"
        app:spinner_popup_width="50dp" />

    <TextView
        android:id="@+id/charisma_stat_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stat_3"
        android:layout_marginTop="40dp"
        android:layout_alignStart="@id/constitution_stat_identifier"
        android:text="@string/charisma"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/stat_6"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/charisma_stat_identifier"
        android:layout_alignStart="@id/charisma_stat_identifier"
        android:layout_marginTop="10dp"
        android:minWidth="100dp"
        android:textSize="25sp"
        app:spinner_divider_color="@color/black"
        app:spinner_divider_show="true"
        app:spinner_divider_size="1dp"
        app:spinner_item_array="@array/stats_array"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@color/dark_red"
        app:spinner_popup_height="300dp"
        app:spinner_popup_width="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/middle_view"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/middle_view"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/minimum_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:onClick="select_min_72"
            android:text="Minimum 72" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/minimum_switch"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@id/minimum_switch"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/four_d_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:onClick="select_Stat_Roll"
                android:text="4d6" />

            <RadioButton
                android:id="@+id/three_d_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:onClick="select_Stat_Roll"
                android:text="3d6" />


        </RadioGroup>
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/roll_for_stats"
        android:minWidth="200dp"
        android:layout_below="@id/middle_view"
        android:layout_centerHorizontal="true"
        android:onClick="generate_Random_Stats"
        android:id="@+id/generate_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/generate_button"
        android:text="Generated Stats"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:id="@+id/generated_stats"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_alignEnd="@id/stat_1"
        android:layout_below="@id/generated_stats"
        android:layout_marginTop="20dp"
        android:id="@+id/random_stat_1"
        android:text="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/generated_stats"
        android:layout_marginTop="20dp"
        android:id="@+id/random_stat_2"
        android:text="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_alignStart="@id/stat_3"
        android:layout_below="@id/generated_stats"
        android:layout_marginTop="20dp"
        android:id="@+id/random_stat_3"
        android:text="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_alignEnd="@id/random_stat_1"
        android:layout_below="@id/random_stat_1"
        android:layout_marginTop="40dp"
        android:id="@+id/random_stat_4"
        android:text="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/random_stat_2"
        android:layout_marginTop="40dp"
        android:id="@+id/random_stat_5"
        android:text="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_alignEnd="@id/random_stat_3"
        android:layout_below="@id/random_stat_3"
        android:layout_marginTop="40dp"
        android:id="@+id/random_stat_6"
        android:text="10"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:minWidth="200dp"
        android:padding="20dp"
        android:text="Next"
        android:textSize="20sp"/>



</RelativeLayout>